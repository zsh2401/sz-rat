{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "jsx": "react",
    "lib": [
      "ES2015","DOM"
    ],
    "resolveJsonModule": true,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "strictBindCallApply": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/*",
    "src/app/server.ts",
    "src/common/debug-mx"
  ],
  "exclude": [
    "node_modules"
  ]
}